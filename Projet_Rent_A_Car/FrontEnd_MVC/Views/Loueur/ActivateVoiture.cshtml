@model FrontEnd_MVC.Models.Voiture

@{
    ViewData["Title"] = "ActivateVoiture";
}

<h1>Activer une voiture</h1>

<h3>Etes-vous sûre de vouloir activer cette voiture ?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idvoiture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idvoiture)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idnotoriete)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdnotorieteNavigation.Libelle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Iddepot)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IddepotNavigation.IdvilleNavigation.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Immatriculation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Immatriculation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marque)
        </dd>
    </dl>
    
    <form asp-action="ActivateVoiture">
        <input type="submit" value="Activer" class="btn btn-success" /> | <a class="btn btn-dark" asp-action="AfficheVoitureInactive">Retour à la liste</a>
        
    </form>
</div>
