@model IEnumerable<FrontEnd_MVC.Models.Ville>

@{
    ViewData["Title"] = "AfficheVille";
}

<h1>AfficheVille</h1>

<p>
    <a asp-action="CreateVille">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.IDPays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.IDPays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                <a asp-action="EditVille" asp-route-id="@item.Idville">Edit</a>
                <a asp-action="deleteVille" asp-route-id="@item.Idville">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
