@model FrontEnd_MVC.Models.Ville

@{
    ViewData["Title"] = "deleteVille";
}

<h1>Supprimer une ville</h1>

<h3>Etes-vous sûre de vouloir supprimer cette ville ?</h3>
<hr />
<div>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idville)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idville)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idpays)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdpaysNavigation.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
    </dl>
    
    <form asp-action="deleteVille">
        <input type="submit" value="Supprimer" class="btn btn-danger" /> | <a class="btn btn-dark" asp-action="AfficheVille">Retour à la liste</a>
        
    </form>
</div>

<div class="ErrorMessage"> @ViewBag.Error </div>