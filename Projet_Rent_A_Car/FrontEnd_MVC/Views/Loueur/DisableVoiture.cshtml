@model FrontEnd_MVC.Models.Voiture

@{
    ViewData["Title"] = "DisableVoiture";
}

<h1>Désactiver une voiture</h1>

<h3>Etes-vous sûre de vouloir désactiver cette voiture ?</h3>
<hr />
<div>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idvoiture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idvoiture)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idnotoriete)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdnotorieteNavigation.Libelle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Iddepot)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IddepotNavigation.IdvilleNavigation.Nom)
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Immatriculation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Immatriculation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marque)
        </dd>
    </dl>
    
    <form asp-action="DisableVoiture">
        <input type="submit" value="Désactiver" class="btn btn-danger" /> | <a class="btn btn-dark" asp-action="AfficheVoitureActive">Retour à la liste</a>
        
    </form>
</div>
