@model FrontEnd_MVC.Models.Ville

@{
    ViewData["Title"] = "CreateVille";
}

<h1>Créer une ville</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostVille">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>                     
            <div class="form-group">
             @Html.LabelFor(x => Model.Idpays, htmlAttributes: new { @class = "control-label col-md-15" })
             <div class="col-md-35">
                @Html.DropDownListFor(x => Model.Idpays, new SelectList(Model.ListPays, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "IDPays"})
                @Html.ValidationMessageFor(x => x.Idpays, "", new { @class = "text-danger" })
             </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-success" /> | <a class="btn btn-dark" asp-action="AfficheVille">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>

<div class="ErrorMessage"> @ViewBag.Error </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
