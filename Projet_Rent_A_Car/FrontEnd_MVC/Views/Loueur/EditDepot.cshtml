@model FrontEnd_MVC.Models.Depot

@{
    ViewData["Title"] = "EditDepot";
}

<h1>Mofidier le dépôt</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDepot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Iddepot" class="control-label"></label>
                <input asp-for="Iddepot" class="form-control" />
                <span asp-validation-for="Iddepot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idville" class="control-label"></label>
                <input asp-for="Idville" class="form-control" />
                <span asp-validation-for="Idville" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inactif" class="control-label"></label>
                <input asp-for="Inactif" class="form-control" />
                <span asp-validation-for="Inactif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauver" class="btn btn-success" /> | <a class="btn btn-dark" asp-action="Index">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>

<div class="ErrorMessage"> @ViewBag.Error </div>
