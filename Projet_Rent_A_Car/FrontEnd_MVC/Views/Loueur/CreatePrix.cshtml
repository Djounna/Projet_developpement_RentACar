@model FrontEnd_MVC.Models.Prix

@{
    ViewData["Title"] = "CreatePrix";
}

<h1>CreatePrix</h1>

<h4>Prix</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostPrix">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden="hidden" class="form-group">
                <label asp-for="Idprix" class="control-label"></label>
                <input asp-for="Idprix" class="form-control" />
                <span asp-validation-for="Idprix" class="text-danger"></span>
            </div>
            <div class="form-group">
                 @Html.LabelFor(x => Model.Idpays, htmlAttributes: new { @class = "control-label col-md-15" })
             <div class="col-md-35">
                @Html.DropDownListFor(x => Model.Idpays, new SelectList(Model.ListPays, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "IDPays"})
                @Html.ValidationMessageFor(x => x.Idpays, "", new { @class = "text-danger" })
             </div>
           
            </div>
            <div hidden="hidden" class="form-group">
                <label asp-for="DateDebut" class="control-label"></label>
                <input asp-for="DateDebut" class="form-control" />
                <span asp-validation-for="DateDebut" class="text-danger"></span>
            </div>
            <div hidden="hidden" class="form-group">
                <label asp-for="DateFin" class="control-label"></label>
                <input asp-for="DateFin" class="form-control" />
                <span asp-validation-for="DateFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrixKm" class="control-label"></label>
                <input asp-for="PrixKm" class="form-control" />
                <span asp-validation-for="PrixKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
