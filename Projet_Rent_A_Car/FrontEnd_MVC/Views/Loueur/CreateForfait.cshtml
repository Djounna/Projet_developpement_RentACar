@model FrontEnd_MVC.Models.Forfait

@{
    ViewData["Title"] = "CreateForfait";
}

<h1>Création d'un forfait</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostForfait">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden="hidden" class="form-group">
                <label asp-for="Idforfait" class="control-label"></label>
                <input asp-for="Idforfait" class="form-control" />
                <span asp-validation-for="Idforfait" class="text-danger"></span>
            </div>

             <div class="form-group">
                    @Html.LabelFor(x => Model.Iddepot1, htmlAttributes: new { @class = "control-label col-md-15" })
                    <div class="col-md-35">
                    @Html.DropDownListFor(x => Model.Iddepot1, new SelectList(Model.ListDepot, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "IDDepot1"})
                    @Html.ValidationMessageFor(x => x.Iddepot1, "", new { @class = "text-danger" })
                    </div>
                </div>
             <div class="form-group">
                    @Html.LabelFor(x => Model.Iddepot2, htmlAttributes: new { @class = "control-label col-md-15" })
                    <div class="col-md-35">
                    @Html.DropDownListFor(x => Model.Iddepot2, new SelectList(Model.ListDepot, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "IDDepot2"})
                    @Html.ValidationMessageFor(x => x.Iddepot2, "", new { @class = "text-danger" })
                    </div>
                </div>
           
            <div class="form-group">
                <label asp-for="Prix" class="control-label"></label>
                <input asp-for="Prix" class="form-control" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>
      
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AfficheForfait">Back to List</a>
</div>
