@model FrontEnd_MVC.Models.Reservation

@{
    ViewData["Title"] = "AfficheFacturation";
}

<h1>Facturation</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idreservation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idreservation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idclient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdclientNavigation.Nom) @Html.DisplayFor(model => model.IdclientNavigation.Prenom) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idvoiture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdvoitureNavigation.Marque) / @Html.DisplayFor(model => model.IdvoitureNavigation.IdnotorieteNavigation.Libelle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IddepotDepart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IddepotDepartNavigation.IdvilleNavigation.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IddepotRetour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IddepotRetourNavigation.IdvilleNavigation.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateReservation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateReservation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateDepart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateDepart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateRetour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRetour)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KilometrageDepart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KilometrageDepart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KilometrageRetour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KilometrageRetour)
        </dd>
        @if(Model.Idforfait ==null){
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.IddepotDepartNavigation.IdvilleNavigation.IdpaysNavigation.Price)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IddepotDepartNavigation.IdvilleNavigation.IdpaysNavigation.Price.PrixKm)
            </dd>
        }else
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Idforfait)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IdforfaitNavigation.Prix)
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoefficientMultiplicateur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoefficientMultiplicateur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Penalite)
        </dt>
         @if (Model.Penalite == true)
                {
                    <dd class = "col-sm-10">@Html.CheckBox("isChecked",true,new { @disabled = "disabled" })</dd>
                }
                else
                {
                     <dd class = "col-sm-10">@Html.CheckBox("isUnchecked",new { @disabled = "disabled" })</dd>
                }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdpaysDepart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IddepotDepartNavigation.IdvilleNavigation.IdpaysNavigation.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdpaysRetour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IddepotRetourNavigation.IdvilleNavigation.IdpaysNavigation.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrixTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrixTotal)
        </dd>
    </dl>
</div>
<div>
    
    <a class="btn btn-dark" asp-action="AfficheReservationCloturees">Retour à la liste</a>
</div>
