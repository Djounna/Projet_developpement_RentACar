@model IEnumerable<FrontEnd_MVC.Models.Pays>

@{
    ViewData["Title"] = "AffichePays";
}

<h1>AffichePays</h1>

<p>
    <a asp-controller="Loueur" asp-action="CreatePays">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReferencePrix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>        
            <td>
                @Html.DisplayFor(modelItem => item.ReferencePrix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>               
                <a asp-action="EditPays" asp-route-id="@item.IDPays">Edit</a>
                <a asp-action="deletePays" asp-route-id="@item.IDPays">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
