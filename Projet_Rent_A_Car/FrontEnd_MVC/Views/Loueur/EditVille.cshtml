@model FrontEnd_MVC.Models.Ville

@{
    ViewData["Title"] = "EditVille";
}

<h1>Modifier la ville</h1>

<hr />

<div class="row">
    <div class="col-md-4">     
        <form asp-action="UpdateVille">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div Hidden="hidden" class="form-group">
                <label asp-for="Idville" class="control-label" ></label>
                <input asp-for="Idville" class="form-control" readonly="readonly" />
                <span asp-validation-for="Idville" class="text-danger"></span>
            </div>
            <div hidden="hidden" class="form-group">
                <label asp-for="Idpays" class="control-label"></label>
                <input asp-for="Idpays" class="form-control" readonly="readonly"  />
                <span asp-validation-for="Idpays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauver" class="btn btn-success" /> |  <a class="btn btn-dark" asp-action="AfficheVille">Retour à la liste </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
